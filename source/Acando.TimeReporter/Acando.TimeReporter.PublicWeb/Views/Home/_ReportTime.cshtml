@using Acando.TimeReport
<script type="text/ng-template" id="ReportTime.html">
<div class="row">
    <div class="col-md-8">
        <form class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-2 control-label" for="maconomyUsername">Username</label>
                <div class="col-sm-10">
                    <input class="form-control" type="text" name="maconomyUsername" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="maconomyPassword">Password</label>
                <div class="col-sm-10">
                    <input class="form-control" type="password" name="maconomyPassword" />
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label" for="year">Year/Week</label>
                <div class="col-sm-5">
                    <input class="form-control" type="number" name="year" placeholder="Year" value="@DateTime.UtcNow.Year" />
                </div>
                <div class="col-sm-5">
                    <input class="form-control" type="number" name="week" placeholder="Week" value="@DateTime.UtcNow.GetIso8601WeekOfYear()" />
                </div>
            </div>
            <div class="form-group">
                <button class="btn btn-default pull-right" type="button">Report time</button>
            </div>
        </form>
    </div>
</div>        
</script>
